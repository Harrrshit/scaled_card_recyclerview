<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="500dp"
    android:background="@drawable/toolbar_background_another"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/activity_imageFrame_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/image1"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/activity_imageFrame_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Image"
                android:textAppearance="@style/textAppearance"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="@id/activity_imageFrame_image"
                app:layout_constraintBottom_toBottomOf="@id/activity_imageFrame_image"
                app:layout_constraintStart_toStartOf="@id/activity_imageFrame_image"
                app:layout_constraintEnd_toEndOf="@id/activity_imageFrame_image"
                app:layout_constraintVertical_bias=".9"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>